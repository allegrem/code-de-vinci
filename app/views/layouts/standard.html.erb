</div>


<div style="float:right; text-align:right;">
  <% if session[:joueur_id] == nil %>
    <%= link_to 'Connexion', :controller => "joueurs", :action => "login" %> |
    <%= link_to 'Inscription', :controller => "joueurs", :action => "new" %>
  <% else %>
    Bienvenue <%= @joueur.pseudo %> ! 
    <%= link_to 'Profil', :controller => "joueurs", :action => "show", :id => @joueur.id %> |
